<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_black"
        android:divider="@drawable/divider_gray"
        android:orientation="vertical"
        android:showDividers="middle">

        <TextView
            style="@style/textStyle_default"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="8dp"
            android:text="库位信息"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                style="@style/textStyle_default"
                android:gravity="center"
                android:text="仓位："
                android:textSize="@dimen/textSize_title" />

            <EditText
                android:id="@+id/et_storageNo"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border_black"
                android:gravity="center"
                android:hint="例：KZ&amp;A-1"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:padding="8dp"
                android:textSize="@dimen/textSize_title" />
        </LinearLayout>


        <TextView
            style="@style/textStyle_default"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="8dp"
            android:text="入库信息"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_title" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider_gray"
                android:orientation="vertical"
                android:showDividers="middle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_gray"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:showDividers="middle">

                    <TextView
                        style="@style/textStyle_default"
                        android:layout_width="130dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="工单号" />

                    <TextView
                        style="@style/textStyle_default"
                        android:layout_width="50dp"
                        android:gravity="center"
                        android:text="码数" />

                    <TextView
                        style="@style/textStyle_default"
                        android:layout_width="120dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="RFID卡号" />

                    <TextView
                        style="@style/textStyle_default"
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:text="入库数" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_gray"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:showDividers="middle">

                    <TextView
                        android:id="@+id/tv_shopOrder"
                        style="@style/textStyle_default"
                        android:layout_width="130dp"
                        android:gravity="center"
                        android:padding="8dp" />

                    <TextView
                        android:id="@+id/tv_size"
                        style="@style/textStyle_default"
                        android:layout_width="50dp"
                        android:gravity="center" />

                    <EditText
                        android:id="@+id/et_rfidNo"
                        style="@style/textStyle_default"
                        android:layout_width="120dp"
                        android:gravity="center"
                        android:hint="输入卡号"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:padding="8dp"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/et_inQTY"
                        style="@style/textStyle_default"
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:hint="数量"
                        android:inputType="number"
                        android:padding="8dp"
                        android:singleLine="true" />
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:id="@+id/btn_storage"
            style="@style/btnStyle_primary"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:text="入库" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_slide"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/tag1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border_black"
            android:divider="@drawable/divider_gray"
            android:orientation="vertical"
            android:padding="0.5dp"
            android:showDividers="middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider_gray"
                android:orientation="horizontal"
                android:padding="5dp"
                android:showDividers="middle">

                <TextView
                    style="@style/textStyle_default"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="用户" />

                <TextView
                    style="@style/textStyle_default"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="工号" />

                <TextView
                    style="@style/textStyle_default"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_loginUsers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider_gray"
                android:orientation="vertical"
                android:showDividers="middle" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            style="@style/btnStyle_primary"
            android:layout_width="wrap_content"
            android:layout_below="@id/tag1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="员工上岗" />

        <TextView
            android:id="@+id/btn_setting"
            style="@style/textStyle_default"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="设置" />

    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
